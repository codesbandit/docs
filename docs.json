{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Berumrah Documentation",
  "colors": {
    "primary": "#0B7A3B",
    "light": "#14C56E",
    "dark": "#064C25"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/berumrah-light.svg",
    "dark": "/logo/berumrah-dark.svg"
  },

  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "overview",
              "quickstart",
              "onboarding",
              "roles"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/event-management",
              "features/jamaah-management",
              "features/travel-itinerary",
              "features/payment-gateway",
              "features/seat-quota",
              "features/custom-form"
            ]
          },
          {
            "group": "Administration",
            "pages": [
              "admin/settings",
              "admin/access-control",
              "admin/notifikasi",
              "admin/integrations"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "customization/theme",
              "customization/navigation",
              "customization/forms"
            ]
          },
          {
            "group": "Changelog",
            "pages": [
              "changelog/releases",
              "changelog/versioning"
            ]
          }
        ]
      },

      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Introduction",
            "pages": [
              "api/introduction",
              "api/authentication",
              "api/rate-limits"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api/endpoints/jamaah",
              "api/endpoints/event",
              "api/endpoints/payment",
              "api/endpoints/webhook"
            ]
          }
        ]
      }
    ],

    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://berumrah.id",
          "icon": "globe"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@berumrah.id",
          "icon": "envelope"
        }
      ]
    }
  },

  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://app.berumrah.id"
      }
    ]
  },

  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity"
    ]
  },

  "footer": {
    "socials": {
      "instagram": "https://instagram.com/berumrahcom",
      "github": "https://github.com/berumrah",
      "linkedin": "https://linkedin.com/company/berumrah"
    }
  }
}