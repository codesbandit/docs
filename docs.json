{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Berumrah Documentation",
  "description": "Berumrah Documentation adalah panduan untuk platform ERP dan ekosistem digital umrah di Indonesia. Temukan cara menggunakan fitur Berumrah untuk mengelola pendaftaran jamaah, pembayaran, kuota, keberangkatan, program haji, hingga integrasi API.",
  "colors": {
    "primary": "#c6a03b",
    "light": "#14C56E",
    "dark": "#064C25"
  },
  "favicon": "/favicon.png",
  "logo": {
    "light": "/logo/light-logo.png",
    "dark": "/logo/dark-logo.png"
  },

  "navigation": {
    "tabs": [
      {
        "tab": "Panduan",
        "groups": [
          {
            "group": "Memulai",
            "icon": "rocket",
            "pages": [
              "overview",
              "quickstart"
            ]
          }
        ],
        "groups": [
          {
            "item": "Fitur Utama",
            "icon": "grid-2",
            "description": "Fitur-fitur utama platform Berumrah",
            "groups": [
              {
                "group": "Manajemen",
                "pages": [
                  "features/event-management",
                  "features/jamaah-management"
                ]
              },
              {
                "group": "Operasional",
                "pages": [
                  "features/travel-itinerary",
                  "features/payment-gateway",
                  "features/seat-quota",
                  "features/custom-form"
                ]
              }
            ]
          },
          {
            "item": "Administrasi",
            "icon": "gear",
            "description": "Pengaturan dan kontrol akses",
            "pages": [
              "admin/settings",
              "admin/access-control",
              "admin/notifikasi",
              "admin/integrations"
            ]
          },
          {
            "item": "Kustomisasi",
            "icon": "palette",
            "description": "Personalisasi tampilan dan form",
            "pages": [
              "customization/theme",
              "customization/navigation",
              "customization/forms"
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "groups": [
          {
            "group": "Catatan Pembaruan",
            "icon": "clock-rotate-left",
            "pages": [
              "changelog/releases",
              "changelog/versioning"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://berumrah.id",
          "icon": "globe"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@berumrah.id",
          "icon": "envelope"
        }
      ]
    }
  },

  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://app.berumrah.id"
      }
    ]
  },

  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity"]
  },

  "footer": {
    "socials": {
      "instagram": "https://instagram.com/berumrahcom",
      "github": "https://github.com/berumrah",
      "linkedin": "https://linkedin.com/company/berumrah"
    }
  }
}